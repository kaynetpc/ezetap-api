{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2016",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "rootDir": "src",
    "outDir": "build",                          
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "__test__", 
    "build",  
    "node_modules", 
    "coverage",
    "babel.config.js",
    "jest.config.js",
    "tsconfig.json"
  ]
}